{
  "dashboard": {
    "id": null,
    "title": "Accountability Layer Performance Dashboard",
    "tags": ["performance", "monitoring", "accountability"],
    "style": "dark",
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "API Response Time (p50, p95, p99)",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.5, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "p50"
          },
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "p95"
          },
          {
            "expr": "histogram_quantile(0.99, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "p99"
          }
        ],
        "yAxes": [
          {
            "label": "Response Time (seconds)",
            "unit": "s"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "API Requests per Second",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_requests_total[5m])",
            "legendFormat": "{{method}} {{route}}"
          }
        ],
        "yAxes": [
          {
            "label": "Requests/sec",
            "unit": "reqps"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "Database Operation Latency",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(mongodb_operation_duration_seconds_bucket[5m]))",
            "legendFormat": "{{operation}} {{collection}}"
          }
        ],
        "yAxes": [
          {
            "label": "Latency (seconds)",
            "unit": "s"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        }
      },
      {
        "id": 4,
        "title": "Database Throughput",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(mongodb_operations_total[5m])",
            "legendFormat": "{{operation}} {{collection}}"
          }
        ],
        "yAxes": [
          {
            "label": "Operations/sec",
            "unit": "ops"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        }
      },
      {
        "id": 5,
        "title": "WebSocket Connections",
        "type": "stat",
        "targets": [
          {
            "expr": "websocket_connections_total",
            "legendFormat": "Active Connections"
          }
        ],
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 0,
          "y": 16
        }
      },
      {
        "id": 6,
        "title": "WebSocket Message Latency",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.99, rate(websocket_message_duration_seconds_bucket[5m]))",
            "legendFormat": "p99 Message Latency"
          }
        ],
        "yAxes": [
          {
            "label": "Latency (seconds)",
            "unit": "s"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 20
        }
      },
      {
        "id": 7,
        "title": "Memory Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "process_resident_memory_bytes / 1024 / 1024",
            "legendFormat": "RSS (MB)"
          },
          {
            "expr": "process_heap_size_bytes / 1024 / 1024",
            "legendFormat": "Heap Size (MB)"
          },
          {
            "expr": "process_heap_used_bytes / 1024 / 1024",
            "legendFormat": "Heap Used (MB)"
          }
        ],
        "yAxes": [
          {
            "label": "Memory (MB)",
            "unit": "bytes"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 20
        }
      },
      {
        "id": 8,
        "title": "CPU Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(process_cpu_seconds_total[5m]) * 100",
            "legendFormat": "CPU Usage %"
          }
        ],
        "yAxes": [
          {
            "label": "CPU Usage (%)",
            "unit": "percent"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 28
        }
      },
      {
        "id": 9,
        "title": "Event Bus Performance",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(nats_messages_published_total[5m])",
            "legendFormat": "Messages Published/sec"
          },
          {
            "expr": "rate(nats_messages_consumed_total[5m])",
            "legendFormat": "Messages Consumed/sec"
          }
        ],
        "yAxes": [
          {
            "label": "Messages/sec",
            "unit": "msgps"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 28
        }
      },
      {
        "id": 10,
        "title": "Error Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_requests_total{status=~\"5..\"}[5m])",
            "legendFormat": "5xx Errors/sec"
          },
          {
            "expr": "rate(http_requests_total{status=~\"4..\"}[5m])",
            "legendFormat": "4xx Errors/sec"
          }
        ],
        "yAxes": [
          {
            "label": "Errors/sec",
            "unit": "reqps"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 36
        }
      },
      {
        "id": 11,
        "title": "Rate Limiting",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(rate_limit_hits_total[5m])",
            "legendFormat": "Rate Limit Hits/sec"
          },
          {
            "expr": "rate(rate_limit_exceeded_total[5m])",
            "legendFormat": "Rate Limit Exceeded/sec"
          }
        ],
        "yAxes": [
          {
            "label": "Events/sec",
            "unit": "evps"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 36
        }
      },
      {
        "id": 12,
        "title": "System Load",
        "type": "stat",
        "targets": [
          {
            "expr": "node_load1",
            "legendFormat": "1m Load"
          },
          {
            "expr": "node_load5",
            "legendFormat": "5m Load"
          },
          {
            "expr": "node_load15",
            "legendFormat": "15m Load"
          }
        ],
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 6,
          "y": 16
        }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s",
    "schemaVersion": 16,
    "version": 1,
    "links": [],
    "annotations": {
      "list": []
    }
  }
}
